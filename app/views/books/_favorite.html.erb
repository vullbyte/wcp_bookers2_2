<% if current_user.favorited_by?(book) %>
  <%= link_to book_favorites_path(book), method: :delete do %>
     <i class="fa fa-heart like-btn" aria-hidden="true" style="color: red;"></i>
   <%= book.favorites.count %>like
   <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post do %>
  <i class="fa fa-heart-o like-btn" aria-hidden="true"></i>
  <%= book.favorites.count %>like
  <% end %>
<% end %>

