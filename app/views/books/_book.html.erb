<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

  <div class="form-group">
    <%= f.label :Title %>
    <div>
    <%= f.text_area :title, class: "col-xs-3" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :Opinion %>
    <div>
      <%= f.text_area :body, class: "col-xs-3" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary col-xs-3" %>
  </div>
<% end %>