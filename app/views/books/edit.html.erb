<div class="row">
  <div class="offset-lg-3 col-lg-6">
    <h1>Editing Book</h1>
    <%= render 'books/error', model: @book %>

    <%= form_with model: @book, local:true do |f| %>
      <div class="form-group">
        <%= f.label :Title %>
        <div>
          <%= f.text_area :title, class: "col-xs-3" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :Opinion %>
        <div>
          <%= f.text_area :body, class: "col-xs-3" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Update Book", class: "btn btn-success col-xs-1" %>
      </div>
    <% end %>

    <div class="menu">
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>

  </div>
  <div class="col-lg-3"></div>
</div>