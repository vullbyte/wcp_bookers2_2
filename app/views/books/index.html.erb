<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= flash[:notice] %>

      <%= render 'books/error', model: @book %>
      <%= render 'users/user', users: @user %>

      <div>
        <%= link_to '編集', edit_user_path(current_user.id) %>
      </div>
      <%= render 'books/book', books: @book %>
    </div>

    <div class="col-lg-8 offset-lg-1">
      <table class="table book-index">
        <h2>Book detail</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,  format: 'jpeg' ,fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

