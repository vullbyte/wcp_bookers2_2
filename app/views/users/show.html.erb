<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/user', users: @user %>
      <div>
        <%= link_to '編集', edit_user_path(current_user.id) %>
      </div>
      <%= render 'books/book', books: @book %>
    </div>

    <div class="col-lg-8 offset-lg-1">
      <h1>Book detail</h1>
      <table class="table user-show">
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
            <% end %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
      </div>
  </div>
</div>
