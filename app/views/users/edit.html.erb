<div class="container">
  <div class="row">
    <div class="col-offset-lg-3 col-lg-5">

      <% if @user.errors.any? %>
        <div class="error">
          <h2><%= @user.errors.count %> errors prohibited this obj from being saved</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li class="error-message"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form-group">
        <label>image</label><br>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
        <label>Introduction</label><br>
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
</div>